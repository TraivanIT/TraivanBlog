<h1 class="my-4">Traivan Von
    <small>Exploring more my blog</small>
  </h1>
<%@posts.each do |post|%>
  <!-- Blog Post -->
  <div class="card mb-4">
    <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
    <div class="card-body">
      <h2 class="card-title"><%= post.title%></h2>
      <p class="card-text"><%= truncate(post.content, length: 210, separator: '')%></p>
      
      <%= link_to post_path(post) do %>
        <span class="btn btn-primary btn-sm"> Read More &rarr;</span>
      <% end %>

    </div>
    <div class="card-footer text-muted">
      Posted on <%= post.created_at.strftime("%B %d, %Y ") %>by Traivan
    </div>
  </div>
<% end %>