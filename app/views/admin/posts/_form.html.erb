<%= form_for [:admin, @post] do |f|%>
  <div class="form-group">
    <%= f.label :title%><br>
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.file_field :blog_image%>
  </div>

  <div class="form-group">
    <%= f.label :publish%><br>
    <%= f.check_box :publish%>
  </div>
  <div class="form-group">
    
    <%= f.select :tag_ids, Tag.all.collect { |t| [t.name, t.id]}, {prompt: 'Select tag'}, multiple: :true%>
  </div>

  <div class="form-group">
    <%= f.label :content%><br>
    <%= f.text_area :content, rows: 10%>
  </div>
  
  <div class="form-group">
    <%= f.button :summit%>
  </div>

<% end %>