<%= form_for [:admin , @setting] do |f|%>
  <div>
    <%= f.label :site_name%><br>
    <%= f.text_field :site_name%>
  </div>

  <div>
    <%= f.label :post_per_page%><br>
    <%= f.number_field :post_per_page%>
  </div>

  <div>
    <%= f.label :post_per_page%><br>
    <%= f.check_box :post_per_page%>
  </div>


  <div>
    <%= f.label :prevent_maintenance%><br>
    <%= f.select :prevent_maintenance, [['Disable', false], ['Enable', true]]%>
  </div>

  <div>
    <%= f.label :tag_visibility%><br>
    <%= f.select :tag_visibility, [['Enable', true], ['Disable', false]]%>
  </div>

  <div>
    <%= f.submit%>
  </div>

  
<% end %>